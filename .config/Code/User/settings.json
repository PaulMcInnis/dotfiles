{
    // "triggerTaskOnSave.tasks": {
    //     "mypy-whole-project": [
    //         "**/*.py"
    //     ]
    // },
    "editor.mouseWheelScrollSensitivity": 0.75,
    "files.insertFinalNewline": true,
    "python.linting.pylintArgs": [
        "--generate-members"
    ], // fixes issues with numpy and pytorch "no member" pylint errors
    "editor.autoSurround": "never",
    "editor.autoClosingQuotes": "never",
    "editor.detectIndentation": true,
    "editor.rulers": [
        //88k
        //88,
        128
    ],
    "emmet.excludeLanguages": ["typescriptreact"],  // or whatever languages you want to exclude
    "editor.minimap.enabled": false, // removes minimap
    "editor.renderWhitespace": "none", // removes whitespace chars
    "editor.renderIndentGuides": false, // removes indent guides
    "editor.renderLineHighlight": "none", // removes line highlight
    "editor.overviewRulerBorder": false, // removes border from overview ruler (located on the right, same position as the scrollbar)
    "editor.hideCursorInOverviewRuler": true, // hides cursor mark in the overview ruler
    "editor.folding": false, // removes the folding feature
    "editor.occurrencesHighlight": false, // removes the space used mainly for debugging indicators
    "explorer.openEditors.visible": 0, // removes the open editors section at the top of the sidebar, you can see the opened files with ⌘ + ⌥ + Tab
    "workbench.activityBar.visible": false, // removes the activity bar (the 4 icons at the left of the screen), so now you will have to open the explorer, git, debugger and extension with shortcuts or through the Command Palette
    "workbench.editor.showIcons": false, // removes icon from opened files in tabs
    "workbench.editor.tabCloseButton": "off", // removes cross icon from tabs
    "workbench.statusBar.visible": true, // removes the status bar
    "indenticator.color.dark": "rgba(255,255,255,.1)", // adds a subtle indent guide (needs Indenticator extension)
    "workbench.colorTheme": "Monokai ST3",
    "workbench.colorCustomizations": { // object that allows you to customize your color theme: https://code.visualstudio.com/docs/getstarted/theme-color-reference
        "tab.activeBorder": "#0000", // removes border to highlight active tabs (the colors formats are: #RGB, #RGBA, #RRGGBB or #RRGGBBAA)
        "editor.selectionBackground": "#135564", //"#135564",
        "editor.selectionHighlightBackground": "#135564", //"#135564"
    },
    "editor.scrollBeyondLastLine": false,
    "editor.autoClosingBrackets": "never",
    "window.zoomLevel": 1.5,
    "customWindowZoom.zoomLevelChangeValue": 0.1,
    "workbench.startupEditor": "none",
    "files.trimTrailingWhitespace": true,
    "python.linting.enabled": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.useTabStops": false,
    "git.useForcePushWithLease": false,
    "git.showInlineOpenFileAction": false,
    "git.showProgress": false,
    "git.pullTags": false,
    "terminal.integrated.fontFamily": "monospace",
    "cSpell.userWords": [
        "propagations"
    ],
    "editor.matchBrackets": "always",
    "editor.glyphMargin": false,
    //"python.pythonPath": "/usr/bin/python3",
    // "customizeUI.stylesheet": {
    //   ".editor-actions": "display: none !important;",
    // },
    "editor.fontFamily": "'JetBrains Mono'",
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": true,
    "autoDocstring.docstringFormat": "google",
    "python.defaultInterpreterPath": "/bin/python3",
    "editor.selectionClipboard": false,
    "diffEditor.renderSideBySide": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
    },
    "editor.quickSuggestions": {
        "strings": true
    },
    "css.validate": false, // tailwind does this
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "editor.autoClosingOvertype": "never",
    //GitLens... NOTE: this is needed for devcontainers with this trash ext inside.
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    //"gitlens.views.repositories.enabled": false,
    // "gitlens.views.search.enabled": false,
    // "gitlens.views.compare.enabled": true,
    "gitlens.mode.statusBar.enabled": false,
    // "gitlens.views.repositories.location": "gitlens",
    // "gitlens.views.fileHistory.location": "gitlens",
    // "gitlens.views.lineHistory.location": "gitlens",
    // "gitlens.views.compare.location": "gitlens",
    // "gitlens.views.search.location": "gitlens",
    "gitlens.menus": {
        "editor": false,
        "editorGroup": false,
        "editorTab": false,
        "explorer": false,
        "scmGroup": false,
        "scmItem": false
    },
    "gitlens.statusBar.reduceFlicker": true,
    // "gitlens.views.fileHistory.enabled": true,
    //"gitlens.views.lineHistory.enabled": false,
    "gitlens.hovers.annotations.details": false,
    "gitlens.codeLens.enabled": false,
    //"python.languageServer": "Pylance",
    "git.ignoreMissingGitWarning": true,
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        //"editor.autoIndent": false,
        // "gitlens.codeLens.scopes": [
        //     "document"
        // ],
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
    "python.showStartPage": false,
    "explorer.confirmDragAndDrop": false,
    "update.showReleaseNotes": false,
    "docker.showStartPage": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "jupyter.alwaysTrustNotebooks": true,
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "workbench.editor.untitled.hint": "hidden",
    "security.workspace.trust.untrustedFiles": "open",
    "python.pythonPath": "/bin/python3",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "gitlens.views.commits.files.layout": "list",
    "debug.javascript.codelens.npmScripts": "never",
    "npm.autoDetect": "off",
    "Lua.telemetry.enable": false,
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
}
